<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx"
				xmlns:controls="components.controls.*"
				width="300" height="190" borderColor="#000000" borderAlpha="0.85" cornerRadius="8" borderWeight="2" backgroundColor="#333333" backgroundAlpha="0.85">
	<s:layout>
		<s:VerticalLayout paddingLeft="4" paddingRight="4" paddingBottom="4" paddingTop="4" horizontalAlign="center"/>
	</s:layout>
	<s:BorderContainer id="caption" width="100%" minHeight="0" backgroundColor="#000000" backgroundAlpha="0.5">
		<s:layout>
			<s:HorizontalLayout verticalAlign="middle"  paddingLeft="4"/>
		</s:layout>
		<mx:Image source="{Assets.CONNECTION}" />
		<mx:Label text="Сервер не отвечает..."  fontSize="16"/>
	</s:BorderContainer>
	<s:Group width="100%" height="100%">
		<s:layout>
			<s:VerticalLayout horizontalAlign="center" verticalAlign="middle" />
		</s:layout>
		<controls:LabeledIndicator label="Восстановление..."/>
	</s:Group>
</s:BorderContainer>
